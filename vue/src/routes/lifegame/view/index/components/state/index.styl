.user-name
  display: flex;
  align-items: center;
  justify-content: center
  margin-bottom: 30px;
  font-size: 42px
  line-height: 50px;
  height: 50px;
  img 
    width: 40px;
    height: 40px;
    vertical-align: middle
    display: block
    margin-right: 10px;
.user-wealth
  margin-bottom: 40px;
  font-size: 36px
  line-height: 40px;
  text-align: center
  position: relative
  p
    border-bottom: 1px solid #cccccc;
    &:last-child
      border: none
  .wealth-more
    position: absolute;
    right: 30px;
    top: 2px;
.state
  height: 72px;
  text-align: center
  display: flex
  width: 100%;
  height: 36px;
  align-items: center;
  margin-bottom: 20px;
  .label
    font-size: 30px;
    line-height: 36px;
    width: 100px;
    text-align: right 
  .vue-progress
    width: calc(100% - 100px);
      