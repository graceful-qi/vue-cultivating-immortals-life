
$main-bg-color = aliceblue
$body-bg-color = #ffffff
$theme-color-pink = pink 
$button-bg-color = skyblue


// 模块
.module-box
  box-shadow: 0px 0px 20px rgba(136, 136, 136, 0.19);
  border-radius: 4px;
  background: $body-bg-color

.login-input
  width: 600px;
  height: 80px;
  box-sizing: border-box;
  border-radius: 20px;
  display: flex;
  margin: 0 auto 30px
  position: relative
  img 
    width: 40px;
    height: 40px;
    position: absolute
    left: 26px;
    top: 50%;
    transform: translateY(-50%)
  input
    border: none
    font-size: 32px;
    line-height: 80px;
    box-sizing: border-box;
    padding: 14px 20px 14px 80px
    border-radius: 20px;
    border: 1px solid #d9d9d9;
    width: 100%;
    &:focus
      border-color: #40a9ff;
      box-shadow: 0 0 0 2px rgba(24,144,255,.2);
// 蓝色按钮
.button-skyblue
  width: 200px;
  height: 60px;
  border-radius: 16px;
  background: $button-bg-color
  color: #ffffff;
  margin: 0 auto
  font-size: 32px;
  font-weight: bold;
  line-height: 60px;